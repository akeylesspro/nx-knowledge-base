{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nx-kb.akeyless/schemas/file-doc.schema.json",
  "title": "NX Knowledge Base File Doc",
  "type": "object",
  "required": [
    "schema_version",
    "doc_id",
    "repo",
    "file_name",
    "source",
    "summary",
    "dependencies",
    "exports",
    "symbols",
    "quality"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "doc_id": {
      "type": "string",
      "minLength": 3
    },
    "repo": {
      "type": "object",
      "required": [
        "name",
        "source_default_branch"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "source_default_branch": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "file_name": {
      "type": "string",
      "minLength": 1
    },
    "source": {
      "type": "object",
      "required": [
        "file_path",
        "commit_sha",
        "generated_at_iso",
        "language",
        "framework_tags",
        "link_to_github",
        "link_to_nx_kb"
      ],
      "properties": {
        "file_path": {
          "type": "string",
          "pattern": "^src\\/"
        },
        "commit_sha": {
          "type": "string",
          "minLength": 7
        },
        "generated_at_iso": {
          "type": "string",
          "format": "date-time"
        },
        "language": {
          "type": "string"
        },
        "framework_tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "link_to_github": {
          "type": "string",
          "minLength": 1
        },
        "link_to_nx_kb": {
          "type": "string",
          "pattern": "^/"
        }
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "purpose",
        "problem_solved"
      ],
      "properties": {
        "purpose": {
          "type": "string",
          "minLength": 1
        },
        "problem_solved": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "dependencies": {
      "type": "object",
      "required": [
        "external",
        "internal"
      ],
      "properties": {
        "external": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "kind",
              "why_used"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "runtime",
                  "dev",
                  "peer"
                ]
              },
              "why_used": {
                "type": "string"
              }
            }
          }
        },
        "internal": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "import_path",
              "resolved_file_path",
              "why_used",
              "link_to_nx_kb",
              "link_to_github"
            ],
            "properties": {
              "import_path": {
                "type": "string"
              },
              "resolved_file_path": {
                "type": "string"
              },
              "why_used": {
                "type": "string"
              },
              "link_to_nx_kb": {
                "type": "string",
                "pattern": "^/"
              },
              "link_to_github": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    },
    "exports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "kind",
          "description_one_line",
          "symbol_id"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "description_one_line": {
            "type": "string"
          },
          "symbol_id": {
            "type": "string"
          }
        }
      }
    },
    "symbols": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "symbol_id",
          "name",
          "kind",
          "description_one_line",
          "details",
          "locations"
        ],
        "properties": {
          "symbol_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "description_one_line": {
            "type": "string"
          },
          "details": {
            "type": "object",
            "required": [
              "what_it_does"
            ],
            "properties": {
              "what_it_does": {
                "type": "string"
              },
              "rendered_ui_description": {
                "type": "string"
              }
            }
          },
          "locations": {
            "type": "object",
            "required": [
              "source_line_start",
              "source_line_end",
              "github_permalink",
              "nx_kb_anchor"
            ],
            "properties": {
              "source_line_start": {
                "type": "number"
              },
              "source_line_end": {
                "type": "number"
              },
              "github_permalink": {
                "type": "string"
              },
              "nx_kb_anchor": {
                "type": "string",
                "pattern": "^#"
              }
            }
          }
        }
      }
    },
    "swagger": {
      "type": "object"
    },
    "quality": {
      "type": "object",
      "required": [
        "generation_confidence"
      ],
      "properties": {
        "generation_confidence": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "known_gaps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "last_reviewed_by": {
          "type": "string"
        },
        "last_reviewed_at_iso": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
