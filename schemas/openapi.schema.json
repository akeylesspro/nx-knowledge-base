{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nx-kb.akeyless/schemas/openapi.schema.json",
  "title": "OpenAPI Base Schema",
  "type": "object",
  "required": [
    "openapi",
    "info",
    "paths"
  ],
  "properties": {
    "openapi": {
      "type": "string",
      "pattern": "^3\\."
    },
    "info": {
      "type": "object",
      "required": [
        "title",
        "version"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "paths": {
      "type": "object"
    }
  }
}
